     <TextView 
			android:id="@+id/detallesFuente"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="#000"
			android:text="@string/defaultFuente"
			android:layout_below="@id/detallesDescripcion"
			android:paddingLeft="10dp"/>
     
     <TextView 
         android:id="@+id/detallesLugar"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="#000"
         android:textStyle="bold"
         android:text="@string/defaultLugar"
         android:layout_below="@id/detallesFuente"
         android:layout_alignParentLeft="true"
         android:paddingLeft="10dp"/>
     
     <TextView
         android:id="@+id/detallesDireccion"
         android:layout_width="230dp"
         android:layout_height="wrap_content"
         android:lines="2"
         android:paddingLeft="10dp"
         android:paddingBottom="10dp"
         android:text="@string/defaultDireccion"
         android:layout_alignParentLeft="true"
         android:layout_below="@id/detallesLugar" />
     
     <TextView 
         android:id="@+id/detallesDistancia"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="#000"
         android:textStyle="bold"
         android:text="@string/defaultDistancia"
         android:layout_below="@id/detallesLugar"
         android:layout_alignParentRight="true"
         android:paddingRight="10dp"
         android:layout_marginTop="45dp"/>
     
     <TextView
         android:id="@+id/detallesTelefono"
         android:layout_width="230dp"
         android:layout_height="wrap_content"
         android:lines="1"
         android:paddingLeft="10dp"
         android:paddingBottom="10dp"
         android:text="@string/defaultTelefono"
         android:layout_alignParentLeft="true"
         android:layout_below="@id/detallesDireccion" />
     
