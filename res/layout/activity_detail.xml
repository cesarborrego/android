     <TextView 
        android:id="@+id/detallesTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:padding="10dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:layout_below="@id/details_header_layout"
        android:text="@string/defaultEventTitle"/>
     
     
     
     <LinearLayout 
         android:id="@+id/contenedorCategoria"
         android:orientation="horizontal"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/detallesTitulo"
         android:paddingLeft="10dp">         
         <ImageView
	           android:id="@+id/iconCategoria"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_centerVertical="true"
	           android:layout_marginRight="3dp"
	           android:adjustViewBounds="true"
	           android:maxWidth="16dp"
	           android:src="@drawable/ic_small_musica" />
         <TextView 
	         android:id="@+id/detallesCategoria"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:textColor="#000"
	         android:textStyle="bold"
	         android:text="@string/defaultCategoria"/>
     </LinearLayout>
     
     <TextView 
	         android:id="@+id/detallesFecha"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:textColor="#000"
	         android:text="@string/defaultFecha"
	         android:layout_below="@id/contenedorCategoria"
	         android:paddingLeft="10dp"/>
     
     <TextView 
         android:id="@+id/detallesPrecio"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="#000"
         android:text="@string/defaultPrecio"
         android:layout_alignParentRight="true"
         android:layout_below="@id/detallesFecha"
         android:paddingRight="20dp"
         android:paddingBottom="5dp"/>
     
     <LinearLayout 
        android:id="@+id/layoutShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/details_header_layout"
        android:layout_alignRight="@id/details_header_layout"
        android:orientation="horizontal"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:background="#DDFFFFFF"
        android:gravity="center">
            
        <RelativeLayout
            android:id="@+id/botonRetweetEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
            <ImageView 
                android:id="@+id/iconRetweetFavorito"
	          	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	          	android:adjustViewBounds="true"
	          	android:maxWidth="18dp"
	          	android:layout_centerVertical="true"
	          	android:src="@drawable/ic_action_refresh"/>
            
            <TextView
                android:id="@+id/textRetweetCounter" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#AAA"
                android:text="@string/defaultCounter"
                android:layout_toRightOf="@id/iconRetweetFavorito"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                />
            
        </RelativeLayout>
	      
	      <View android:layout_width="15dp" android:layout_height="1dp"/>
	      
	      <RelativeLayout
            android:id="@+id/botonFavEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
            <ImageView 
                android:id="@+id/iconFavFavorito"
	          	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	          	android:adjustViewBounds="true"
	          	android:maxWidth="18dp"
	          	android:layout_centerVertical="true"
	          	android:src="@drawable/ic_action_important"/>
            
            <TextView
                android:id="@+id/textFavCounter" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#AAA"
                android:text="@string/defaultCounter"
                android:layout_toRightOf="@id/iconFavFavorito"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                />
            
        </RelativeLayout>
	      
	      <View android:layout_width="10dp" android:layout_height="1dp"/>
            
   	</LinearLayout>
     
     
   	
     <TextView 
         android:id="@+id/detallesDescripcion"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textColor="#000"
         android:text="@string/defaultDescripcionEvento"
         android:padding="10dp"
         android:layout_below="@id/detallesPrecio"/>    
    
