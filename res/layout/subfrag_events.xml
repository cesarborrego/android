<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:background="#00000000"
        android:orientation="horizontal">
        
        <RelativeLayout 
            android:id="@+id/botonTimeline"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFF">
            		    
		    <TextView 
		        android:id="@+id/title_Timeline"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
				android:layout_centerInParent="true"
		        android:textColor="#424242"
		        android:gravity="center_vertical"
		        android:text="Cerca de ti"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		    
		    <View 
		        android:id="@+id/selectorOrangeTimeline"
		        android:layout_width="match_parent"
		        android:layout_alignParentBottom="true"
		        android:layout_height="2dp"
		        android:visibility="invisible"
		        android:background="#F78326"/>
            
        </RelativeLayout>
        
        <RelativeLayout 
            android:id="@+id/botonFavoritos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFF">
		    
		    <TextView 
		        android:id="@+id/title_Favorites"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_centerInParent="true"
		        android:textColor="#424242"
		        android:gravity="center_vertical"
		        android:text="Favoritos"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		    
		    <View 
		        android:id="@+id/selectorOrangeFavorites"
		        android:layout_alignParentBottom="true"
		        android:layout_width="match_parent"
		        android:layout_height="2dp"
		        android:visibility="invisible"
		        android:background="#F78326"/>
            
        </RelativeLayout>
        
        
        
    </LinearLayout>
    

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerEvents"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20" />

</LinearLayout>
